{
	"name": "create-index-export",
	"displayName": "Create Index Export",
	"description": "Creates component folders that export using a index file.",
	"publisher": "ZayneAnthony",
	"version": "1.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/zayne-anthony/create-index-export"
	},
	"engines": {
		"vscode": "^1.77.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"react",
		"structure",
		"organiziation",
		"refactor",
		"components"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "create.fromPath",
				"title": "Create Index: Component"
			},
			{
				"command": "create.fromFolder",
				"title": "Create Index: From Folder"
			},
			{
				"command": "create.fromFile",
				"title": "Create Index: From File"
			},
			{
				"command": "create.fromMultiple",
				"title": "Create Index: Multiple Components"
			},
			{
				"command": "create.fromSingleFiles",
				"title": "Create Index: From Component(s)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "create.fromFile",
					"when": "false"
				},
				{
					"command": "create.fromFolder",
					"when": "false"
				},
				{
					"command": "create.fromSingleFiles",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"group": "Create Index",
					"command": "create.fromPath",
					"when": "explorerResourceIsFolder"
				},
				{
					"group": "Create Index",
					"command": "create.fromFolder",
					"when": "explorerResourceIsFolder"
				},
				{
					"group": "Create Index",
					"command": "create.fromFile",
					"when": "!explorerResourceIsFolder"
				},
				{
					"group": "Create Index",
					"command": "create.fromMultiple",
					"when": "explorerResourceIsFolder"
				},
				{
					"group": "Create Index",
					"command": "create.fromSingleFiles",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"keybindings": [
			{
				"command": "create.fromPath",
				"key": "ctrl+f1",
				"mac": "cmd+f1"
			},
			{
				"command": "create.fromFile",
				"when": "explorerViewletFocus && !explorerResourceIsFolder",
				"key": "ctrl+f2",
				"mac": "cmd+f2"
			},
			{
				"command": "create.fromFolder",
				"when": "explorerViewletFocus && explorerResourceIsFolder",
				"key": "ctrl+f3",
				"mac": "cmd+f3"
			}
		],
		"configuration": {
			"title": "Create Index Export",
			"properties": {
				"create.defaultComponentFolder": {
					"type": "string",
					"default": "./src/components",
					"description": "Specifies the default folder path for components."
				},
				"create.defaultFileExtension": {
					"type": "string",
					"default": "jsx",
					"enum": [
						"js",
						"jsx",
						"ts",
						"tsx"
					]
				},
				"create.preserveAlreadyCreatedFiles": {
					"type": "boolean",
					"default": true,
					"description": "Doesn't override index/component file content in created folder."
				},
				"create.createCssFile": {
					"type": "boolean",
					"default": false,
					"description": "Create a CSS file alongside the index and component file."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.77.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"eslint": "^8.39.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.0.4",
		"@vscode/test-electron": "^2.3.0"
	}
}
